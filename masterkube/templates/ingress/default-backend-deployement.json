{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "masterkube-default-http-backend",
        "labels": {
            "app": "default-http-backend"
        },
        "namespace": "$K8NAMESPACE"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "masterkube-default-http-backend"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "masterkube-default-http-backend"
                }
            },
            "spec": {
                "nodeSelector": {
                    "master": "true"
                },
                "terminationGracePeriodSeconds": 60,
                "containers": [
                    {
                        "name": "masterkube-default-http-backend",
                        "image": "gcr.io/google_containers/defaultbackend:1.4",
                        "livenessProbe": {
                            "httpGet": {
                                "path": "/healthz",
                                "port": 8080,
                                "scheme": "HTTP"
                            },
                            "initialDelaySeconds": 30,
                            "timeoutSeconds": 5
                        },
                        "ports": [
                            {
                                "containerPort": 8080
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "10m",
                                "memory": "20Mi"
                            },
                            "requests": {
                                "cpu": "10m",
                                "memory": "20Mi"
                            }
                        }
                    }
                ]
            }
        }
    }
}