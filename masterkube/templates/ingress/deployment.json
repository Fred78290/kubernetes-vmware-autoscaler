{
    "apiVersion": "extensions/v1beta1",
    "kind": "DaemonSet",
    "metadata": {
        "name": "masterkube-ingress-nginx-controller",
        "namespace": "$K8NAMESPACE"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "masterkube-ingress-nginx"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "masterkube-ingress-nginx"
                },
                "annotations": {
                    "prometheus.io/port": "10254",
                    "prometheus.io/scrape": "true"
                }
            },
            "spec": {
                "nodeSelector": {
                    "master": "true"
                },
                "hostNetwork": true,
                "dnsPolicy": "ClusterFirstWithHostNet",
                "serviceAccountName": "masterkube-nginx-ingress-serviceaccount",
                "containers": [
                    {
                        "name": "masterkube-nginx-ingress-controller",
                        "image": "quay.io/kubernetes-ingress-controller/nginx-ingress-controller:0.18.0",
                        "args": [
                            "/nginx-ingress-controller",
                            "--default-backend-service=$K8NAMESPACE/masterkube-default-http-backend",
                            "--kubeconfig=/etc/kubernetes/config",
                            "--ingress-class=nginx",
                            "--sort-backends=true",
                            "--healthz-port=10254",
                            "--http-port=80",
                            "--https-port=443",
                            "--status-port=81",
                            "--configmap=$K8NAMESPACE/masterkube-nginx-configuration",
                            "--tcp-services-configmap=$K8NAMESPACE/masterkube-tcp-services",
                            "--udp-services-configmap=$K8NAMESPACE/masterkube-udp-services",
                            "--annotations-prefix=nginx.ingress.kubernetes.io"
                        ],
                        "volumeMounts": [
                            {
                                "name": "kubeconfig",
                                "mountPath": "/etc/kubernetes/"
                            }
                        ],
                        "env": [
                            {
                                "name": "POD_NAME",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.name"
                                    }
                                }
                            },
                            {
                                "name": "POD_NAMESPACE",
                                "valueFrom": {
                                    "fieldRef": {
                                        "fieldPath": "metadata.namespace"
                                    }
                                }
                            }
                        ],
                        "ports": [
                            {
                                "name": "http",
                                "containerPort": 80
                            },
                            {
                                "name": "https",
                                "containerPort": 443
                            }
                        ],
                        "livenessProbe": {
                            "failureThreshold": 3,
                            "httpGet": {
                                "path": "/healthz",
                                "port": 10254,
                                "scheme": "HTTP"
                            },
                            "initialDelaySeconds": 10,
                            "periodSeconds": 10,
                            "successThreshold": 1,
                            "timeoutSeconds": 1
                        },
                        "readinessProbe": {
                            "failureThreshold": 3,
                            "httpGet": {
                                "path": "/healthz",
                                "port": 10254,
                                "scheme": "HTTP"
                            },
                            "periodSeconds": 10,
                            "successThreshold": 1,
                            "timeoutSeconds": 1
                        }
                    }
                ],
                "volumes": [
                    {
                        "name": "kubeconfig",
                        "hostPath": {
                            "path": "/etc/cluster/"
                        }
                    }
                ]
            }
        }
    }
}