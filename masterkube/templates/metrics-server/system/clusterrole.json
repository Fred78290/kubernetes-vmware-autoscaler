{
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "kind": "ClusterRole",
    "metadata": {
        "name": "system:metrics-server"
    },
    "rules": [
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "pods",
                "nodes",
                "nodes/stats",
                "namespaces",
                "configmaps"
            ],
            "verbs": [
                "get",
                "list",
                "watch"
            ]
        }
    ]
}