{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "vsphere-autoscaler",
        "namespace": "kube-system",
        "labels": {
            "k8s-app": "vsphere-autoscaler"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "k8s-app": "vsphere-autoscaler"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "k8s-app": "vsphere-autoscaler"
                },
                "annotations": {
                    "scheduler.alpha.kubernetes.io/critical-pod": ""
                }
            },
            "spec": {
                "nodeSelector": {
                    "master": "true"
                },
                "initContainers": [
                    {
                        "image": "busybox",
                        "name": "cluster-autoscaler-init",
                        "command":[
                            "/bin/sh",
                            "-c",
                            "rm -f /var/run/cluster-autoscaler/vmware.sock"
                        ],
                        "volumeMounts": [
                            {
                                "name": "cluster-socket",
                                "mountPath": "/var/run/cluster-autoscaler"
                            }
                        ]
                    }
                ],
                "containers": [
                    {
                        "image": "$REGISTRY/vsphere-autoscaler:v1.20.5",
                        "name": "vsphere-autoscaler",
                        "resources": {
                            "limits": {
                                "cpu": "100m",
                                "memory": "300Mi"
                            },
                            "requests": {
                                "cpu": "100m",
                                "memory": "300Mi"
                            }
                        },
                        "command": [
                            "/usr/local/bin/vsphere-autoscaler",
                            "--config=/etc/cluster/kubernetes-vmware-autoscaler.json",
                            "--save=/var/run/cluster-autoscaler/vmware-autoscaler-state.json",
                            "--log-level=info"
                        ],
                        "imagePullPolicy": "Always",
                        "volumeMounts": [
                            {
                                "name": "cluster-socket",
                                "mountPath": "/var/run/cluster-autoscaler"
                            },
                            {
                                "name": "config-cluster-autoscaler",
                                "mountPath": "/etc/cluster"
                            },
                            {
                                "name": "autoscaler-ssh-keys",
                                "mountPath": "/root/.ssh"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "cluster-socket",
                        "emptyDir": {
                        }
                    },
                    {
                        "name": "config-cluster-autoscaler",
                        "configMap": {
                            "name": "config-cluster-autoscaler"
                        }
                    },
                    {
                        "name": "autoscaler-ssh-keys",
                        "secret": {
                            "secretName": "autoscaler-ssh-keys",
                            "defaultMode": 384
                        }
                    }
                ]
            }
        }
    }
}