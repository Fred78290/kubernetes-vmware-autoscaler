{
    "kind": "Role",
    "apiVersion": "rbac.authorization.k8s.io/v1",
    "metadata": {
        "labels": {
            "k8s-app": "kubernetes-dashboard"
        },
        "name": "kubernetes-dashboard",
        "namespace": "$K8NAMESPACE"
    },
    "rules": [
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "secrets"
            ],
            "resourceNames": [
                "kubernetes-dashboard-key-holder",
                "kubernetes-dashboard-certs",
                "kubernetes-dashboard-csrf"
            ],
            "verbs": [
                "get",
                "update",
                "delete"
            ]
        },
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "configmaps"
            ],
            "resourceNames": [
                "kubernetes-dashboard-settings"
            ],
            "verbs": [
                "get",
                "update"
            ]
        },
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "services"
            ],
            "resourceNames": [
                "heapster",
                "dashboard-metrics-scraper"
            ],
            "verbs": [
                "proxy"
            ]
        },
        {
            "apiGroups": [
                ""
            ],
            "resources": [
                "services/proxy"
            ],
            "resourceNames": [
                "heapster",
                "http:heapster:",
                "https:heapster:",
                "dashboard-metrics-scraper",
                "http:dashboard-metrics-scraper"
            ],
            "verbs": [
                "get"
            ]
        }
    ]
}